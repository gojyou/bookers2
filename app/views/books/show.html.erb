
<main>


        <p id="notice"></p>
        <div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img class="attachment user profile_image fallback"> <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></img><table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>


<%= link_to edit_user_path(@user),class: 'btn btn-outline-secondary btn-block' do %>
<i class="fas fa-user-cog edit_user"></i>

<% end %>
      <h2 2 class="mt-3">New book</h2>
      <%= form_with model:@book_new, local:true do |f| %>
       <div class="form-group">
          <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
 <div class="form-group">
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  </div>
   <div class="form-group">
   <%= f.submit 'Create Book' %>
   </div>
<% end %>
</div>
<div class="col-md-8 offset-md-1">
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
<table class="table">
  		  <tbody><tr>
          <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>

  <%= @user.name %><% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        <% if @book.user==current_user %>
          <td><%= link_to edit_book_path(@book),class: 'btn btn-sm btn-success edit_book' do %>Edit<% end %></td>
          <td><%= link_to book_path(@book),method: :delete do %><i class="btn btn-sm btn-danger destroy_book" >Destroy</i><% end %></td>


        <% end %>
        </tr>
      </tbody></table>