<main>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


        <div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img class="attachment user profile_image fallback"> <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></img><table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>


<%= link_to edit_user_path(@user),class: 'btn btn-outline-secondary btn-block' do %>
<i class="fas fa-user-cog edit_user"></i>

<% end %>


      <h2 2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>

          <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :body %>


   <%= f.submit 'Create Book' %>

<% end %>
</div>
<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><% end %>
    </td>

        <td><%= link_to book_path(book) do %>
    <p><%= book.title %></p><% end %></td>
        <td><p><%= book.body%></p>
   </td>
      </tr>
      <% end %>

  </tbody>
</table>
    </div>
  </div>
</div>
 </main>